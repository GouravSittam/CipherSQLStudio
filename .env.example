# ================================
# CipherSQLStudio Environment Variables
# ================================
# Copy this file to .env and fill in your values

# MongoDB Connection (Required)
# Get free cluster at: https://www.mongodb.com/atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ciphersqlstudio

# PostgreSQL Connection (Required)
# Use Supabase (free): https://supabase.com or Neon: https://neon.tech
POSTGRES_HOST=db.xxxxx.supabase.co
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password

# LLM Provider (Optional - for AI hints)
# Options: "openai" or "gemini"
LLM_PROVIDER=gemini

# OpenAI API Key (if using OpenAI)
# Get key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxx

# Google Gemini API Key (if using Gemini - recommended, it's free!)
# Get key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSy-xxxxx

# Optional Settings
MAX_QUERY_EXECUTION_TIME=5000
MAX_RESULT_ROWS=1000
NODE_ENV=production
